<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/just_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="text"
        android:maxLength="10"
        android:hint="just EditText" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/appcompat_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="10"
        android:inputType="textAutoComplete"
        android:hint="appCompat edit text" />

    <EditText
        android:id="@+id/limited_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="10"
        android:inputType="textAutoCorrect"
        android:hint="limited EditText" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/limited_appcompat_edit_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="10"
        android:inputType="textCapCharacters"
        android:hint="limited appCompat edit text" />

    <EditText
        android:id="@+id/just_edit_text1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="textCapSentences"
        android:maxLength="10"
        android:hint="just EditText" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/appcompat_edit_text1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="10"
        android:inputType="textCapWords"
        android:hint="appCompat edit text" />

    <EditText
        android:id="@+id/limited_edit_text1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="10"
        android:inputType="textEnableTextConversionSuggestions"
        android:hint="limited EditText" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/limited_appcompat_edit_text1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="10"
        android:inputType="textNoSuggestions"
        android:hint="limited appCompat edit text" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/limited_appcompat_edit_text2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLength="10"
        android:inputType="textShortMessage"
        android:hint="limited appCompat edit text" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:flow_verticalGap="40dp"
        app:constraint_referenced_ids="just_edit_text, appcompat_edit_text, limited_edit_text, limited_appcompat_edit_text, just_edit_text1, appcompat_edit_text1, limited_edit_text1, limited_appcompat_edit_text1, limited_appcompat_edit_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>