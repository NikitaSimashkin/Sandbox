<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints, HardcodedText">

    <Button
        android:id="@+id/generate_name_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="generate name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/random_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nikita"
        android:textSize="16sp" />

    <Button
        android:id="@+id/send_explicit_manifest_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="send explicit manifest"
        android:textSize="16sp" />

    <Button
        android:id="@+id/send_implicit_non_manifest_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="send implicit non manifest"
        android:textSize="16sp" />

    <Button
        android:id="@+id/go_async_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="start go async receiver"
        android:textSize="16sp" />

    <Button
        android:id="@+id/send_peek_receiver_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="start peek service receiver"
        android:textSize="16sp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:constraint_referenced_ids="generate_name_button, random_name, send_explicit_manifest_button, send_implicit_non_manifest_button, go_async_button, send_peek_receiver_button" />


</androidx.constraintlayout.widget.ConstraintLayout>