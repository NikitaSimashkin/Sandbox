<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <Button
        android:id="@+id/start_foreground_service"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="start foreground service" />

    <Button
        android:id="@+id/detach_notification"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="detach_notification"/>

    <Button
        android:id="@+id/remove_notification"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="remove notification"/>

    <Button
        android:id="@+id/stop_foreground_service"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="stop foreground service"/>

    <Button
        android:id="@+id/start_background_service"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="start background service" />

    <Button
        android:id="@+id/stop_background_service"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="stop background service" />

    <Button
        android:id="@+id/start_background_in_foreground"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="start background in foreground" />

    <Button
        android:id="@+id/bind_service_same_process"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="bind service same process" />

    <Button
        android:id="@+id/unbind_service_same_process"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="unbind service same process" />

    <TextView
        android:id="@+id/number"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="#10000000"/>

    <Button
        android:id="@+id/stop_binded_service_same_process"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="stop binded service" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/first_column"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:constraint_referenced_ids="
            start_foreground_service,
            stop_foreground_service,
            detach_notification,
            remove_notification,
            start_background_service,
            stop_background_service,
            start_background_in_foreground,
            bind_service_same_process,
            unbind_service_same_process,
            stop_binded_service_same_process,
            number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/bind_messenger_service"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="bind service" />

    <Button
        android:id="@+id/unbind_messenger_service"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="unbind service" />

    <Button
        android:id="@+id/get_messenger_number"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="get number" />

    <Button
        android:id="@+id/generate_new_messenger_number"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="generate new number" />

    <TextView
        android:id="@+id/state_messenger"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="#10000000"/>

    <View
        android:id="@+id/separate"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="#FF000000"/>

    <Button
        android:id="@+id/aidl_bind"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="aidl bind"/>

    <Button
        android:id="@+id/fillSyncOut"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="fill sync out"/>

    <Button
        android:id="@+id/fillIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="fill in"/>

    <Button
        android:id="@+id/fillAsyncIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="fill async in"/>

    <Button
        android:id="@+id/fillInOut"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="fill in out"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/second_column"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:constraint_referenced_ids="
            bind_messenger_service,
            unbind_messenger_service,
            get_messenger_number,
            generate_new_messenger_number,
            state_messenger,
            separate,
            aidl_bind,
            fillSyncOut,
            fillIn,
            fillAsyncIn,
            fillInOut"
        app:layout_constraintStart_toEndOf="@id/first_column"
        app:layout_constraintEnd_toStartOf="@id/third_column"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_activity_from_background"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="8sp"
        android:text="start activity" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/third_column"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:constraint_referenced_ids="
            start_activity_from_background
        "
        app:layout_constraintStart_toEndOf="@id/second_column"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>